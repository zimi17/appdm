  { quote: "Pengalaman belajar yang luar biasa, dosen yang kompeten, dan fasilitas yang sangat memadai.", author: "Budi Santoso", title: "Alumni S1 Akuntansi", imageUrl: "https://randomuser.me/api/portraits/men/44.jpg" },
  { quote: "STIE Dwimulya memberikan saya bekal yang kuat untuk bersaing di dunia kerja.", author: "Rina Dewi", title: "Alumni S1 Manajemen", imageUrl: "https://randomuser.me/api/portraits/women/32.jpg" }
