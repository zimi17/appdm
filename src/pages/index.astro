// Placeholder data - to be replaced with Contentful data
const heroData = {
  title: "Transform Your Career with STIE Dwimulya",
  subtitle: "Join our distinguished program in Accounting and Management to launch your professional journey.",
  backgroundImage: "https://images.unsplash.com/photo-1522071820081-009f0129c71c?q=80&w=2070&auto=format&fit=crop",
  ctaConfig: {
    text: "Explore Programs",
    link: "/programs"
  }
};

const statsData = [
  { icon: "academic-cap", count: "50+", label: "Alumni Network" },
  { icon: "globe-alt", count: "Global", label: "Opportunities" },
  { icon: "beaker", count: "20+", label: "Research Centers" },
  { icon: "briefcase", count: "150+", label: "Industry Partners" }
];

const featuredProgramsData = [
  { imageUrl: "https://images.unsplash.com/photo-1517048676732-d65bc937f952?q=80&w=2070&auto=format&fit=crop", title: "S1 Akuntansi", description: "Program studi yang menghasilkan akuntan profesional dan berintegritas.", link: "/programs/s1-akuntansi" },
  { imageUrl: "https://images.unsplash.com/photo-1556761175-5973dc0f32e7?q=80&w=1932&auto=format&fit=crop", title: "S1 Manajemen", description: "Membentuk pemimpin bisnis yang inovatif dan strategis.", link: "/programs/s1-manajemen" },
  { imageUrl: "https://images.unsplash.com/photo-1542744173-8e7e53415bb0?q=80&w=2070&auto=format&fit=crop", title: "S2 Magister Manajemen", description: "Program pascasarjana untuk para profesional yang ingin meningkatkan karir.", link: "/programs/s2-mm" }
];

