---
import MainLayout from '@/layouts/MainLayout.astro';
import HeroSection from '@/components/sections/HeroSection.tsx';
import ContentSection from '@/components/sections/ContentSection.tsx';
import StatsSection from '@/components/sections/StatsSection.tsx';
import TestimonialSection from '@/components/sections/TestimonialSection.tsx';
import CTASection from '@/components/sections/CTASection.tsx';
import { useTranslations, getLangFromUrl } from '@/hooks/use-i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const heroData = t('mba_page.hero');
const contentData = t('mba_page.content');
const statsData = t('mba_page.stats');
const testimonialData = t('mba_page.testimonials');
const ctaData = t('mba_page.cta');
---

<MainLayout title={heroData.headline}>
  <HeroSection {...heroData} client:load />
  <ContentSection {...contentData} client:load />
  <StatsSection {...statsData} client:load />
  <TestimonialSection {...testimonialData} client:load />
  <CTASection {...ctaData} client:load />
</MainLayout>
