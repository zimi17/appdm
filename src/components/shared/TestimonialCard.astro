---
import Card from '../ui/Card.astro';
import Text from '../ui/Text.astro';

interface Props {
  quote: string;
  author: string;
  role: string;
  image: string;
}

const { quote, author, role, image } = Astro.props;
---

<Card shadow={true}>
  <div class="flex items-center mb-4">
    <img src={image} alt={author} class="w-16 h-16 rounded-full mr-4 object-cover" />
    <div>
      <Text variant="body-bold">{author}</Text>
      <Text variant="caption">{role}</Text>
    </div>
  </div>
  <Text variant="body" className="italic">"{quote}"</Text>
</Card>
