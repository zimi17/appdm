---
import Card from '../ui/Card.astro';
import Heading from '../ui/Heading.astro';
import Text from '../ui/Text.astro';
import Button from '../ui/Button.astro';

interface Props {
  name: string;
  jabatan: string;
  image: string;
  slug: string;
}

const { name, jabatan, image, slug } = Astro.props;
---

<Card shadow={true}>
  <img src={image} alt={name} class="w-full h-48 object-cover rounded-t-lg mb-4" />
  <Heading variant="subtitle" className="mb-2">{name}</Heading>
  <Text variant="body" className="mb-4">{jabatan}</Text>
  <Button href={slug} variant="outline">Lihat Profil</Button>
</Card>
