---
import GlobalMenu from '@/components/universal/navigation/GlobalMenu';
import { useTranslations, getLangFromUrl } from '@/hooks/use-i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Placeholder navData
const navData = [
  { label: t('nav.about'), href: '/about' },
  { label: t('nav.academics'), href: '/academics', children: [
    { label: 'S1 Akuntansi', href: '/programs/s1-akuntansi' },
    { label: 'S1 Manajemen', href: '/programs/s1-manajemen' },
  ]},
  { label: t('nav.admissions'), href: '/admissions' },
];
---
<header class="bg-brand-primary text-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto flex justify-between items-center p-4">
    <a href={`/${lang}`} class="flex items-center">
      <img src="/assets/images/logo_alt.svg" alt="STIE Dwimulya Logo" class="h-12" />
    </a>
    <GlobalMenu navData={navData} lang={lang} client:load />
    {/* Add mobile navigation button here */}
  </div>
</header>