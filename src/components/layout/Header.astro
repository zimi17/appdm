---
import Logo from '../common/Logo.astro';
---

<header class="bg-white shadow-md">
  <div class="container mx-auto px-spacing-md">
    <div class="flex items-center justify-between py-spacing-md">
      <div class="flex items-center">
        <Logo />
        <a href="/" class="ml-spacing-sm text-nav-title text-oxford-blue">STIE Dwimulya</a>
      </div>
      <nav class="hidden md:flex space-x-spacing-lg">
        <a href="/" class="text-nav-text text-brand-black hover:text-primary">Beranda</a>
        <a href="/profil" class="text-nav-text text-brand-black hover:text-primary">Profil</a>
        <a href="/akademik" class="text-nav-text text-brand-black hover:text-primary">Akademik</a>
        <a href="/dosen" class="text-nav-text text-brand-black hover:text-primary">Dosen</a>
        <a href="/alumni" class="text-nav-text text-brand-black hover:text-primary">Alumni</a>
        <a href="/beasiswa" class="text-nav-text text-brand-black hover:text-primary">Beasiswa</a>
        <a href="/berita" class="text-nav-text text-brand-black hover:text-primary">Berita</a>
        <a href="/kontak" class="text-nav-text text-brand-black hover:text-primary">Kontak</a>
      </nav>
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-brand-black hover:text-primary focus:outline-none">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>
    <div id="mobile-menu" class="hidden md:hidden">
      <nav class="flex flex-col space-y-spacing-sm px-spacing-md py-spacing-sm">
        <a href="/" class="text-nav-text text-brand-black hover:text-primary">Beranda</a>
        <a href="/profil" class="text-nav-text text-brand-black hover:text-primary">Profil</a>
        <a href="/akademik" class="text-nav-text text-brand-black hover:text-primary">Akademik</a>
        <a href="/dosen" class="text-nav-text text-brand-black hover:text-primary">Dosen</a>
        <a href="/alumni" class="text-nav-text text-brand-black hover:text-primary">Alumni</a>
        <a href="/beasiswa" class="text-nav-text text-brand-black hover:text-primary">Beasiswa</a>
        <a href="/berita" class="text-nav-text text-brand-black hover:text-primary">Berita</a>
        <a href="/kontak" class="text-nav-text text-brand-black hover:text-primary">Kontak</a>
      </nav>
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });
</script>