---
interface Props {
  variant: 'display' | 'title' | 'subtitle';
  className?: string;
}

const { variant, className } = Astro.props;

let Tag: keyof HTMLElementTagNameMap;
let baseClass: string;

switch (variant) {
  case 'display':
    Tag = 'h1';
    baseClass = 'text-display';
    break;
  case 'title':
    Tag = 'h2';
    baseClass = 'text-title';
    break;
  case 'subtitle':
    Tag = 'h3';
    baseClass = 'text-subtitle';
    break;
}
---

<Tag class={`${baseClass} ${className || ''}`}>
  <slot />
</Tag>

<style>
  .text-display { font: 700 3rem 'Merriweather', serif; color: #002147; }
  .text-title { font: 700 2.25rem 'Merriweather', serif; color: #002147; }
  .text-subtitle { font: 700 1.75rem 'Merriweather', serif; color: #002147; }
</style>
