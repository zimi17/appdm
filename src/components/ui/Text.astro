---
interface Props {
  variant?: 'body-large' | 'body' | 'body-bold' | 'caption' | 'overline';
  className?: string;
}

const { variant = 'body', className } = Astro.props;

let baseClass: string;

switch (variant) {
  case 'body-large':
    baseClass = 'text-body-large';
    break;
  case 'body':
    baseClass = 'text-body';
    break;
  case 'body-bold':
    baseClass = 'text-body-bold';
    break;
  case 'caption':
    baseClass = 'text-caption';
    break;
  case 'overline':
    baseClass = 'text-overline';
    break;
}
---

<p class={`${baseClass} ${className || ''}`}>
  <slot />
</p>

<style>
  .text-body-large { font: 400 1.125rem 'Montserrat', sans-serif; color: #1E1E1E; }
  .text-body { font: 400 1rem 'Montserrat', sans-serif; color: #1E1E1E; }
  .text-body-bold { font: 700 1rem 'Montserrat', sans-serif; color: #1E1E1E; }
  .text-caption { font: 400 1rem 'Montserrat', sans-serif; color: #8996A0; }
  .text-overline { font: 700 1rem 'Montserrat', sans-serif; color: #8996A0; text-transform: uppercase; }
</style>
