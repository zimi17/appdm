---
interface Props {
  backgroundColor?: 'white' | 'light-grey' | 'brand-black';
  paddingTop?: string;
  paddingBottom?: string;
}

const { backgroundColor = 'white', paddingTop = 'var(--spacing-3xl)', paddingBottom = 'var(--spacing-3xl)' } = Astro.props;

const bgColorClass = {
  'white': 'bg-white',
  'light-grey': 'bg-light-grey',
  'brand-black': 'bg-brand-black',
}[backgroundColor];
---

<section class={`${bgColorClass}`} style={{ paddingTop, paddingBottom }}>
  <slot />
</section>
