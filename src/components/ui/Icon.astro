---
import { Icon as LucideIcon } from 'lucide-react';

interface Props {
  name?: string; // Name of the icon from lucide-react
  svg?: string; // Raw SVG string for custom icons
  size?: string;
  color?: string;
  className?: string;
}

const { name, svg, size = '1em', color = 'currentColor', className } = Astro.props;

let iconContent;

if (name) {
  // Render Lucide icon
  iconContent = `<LucideIcon name="${name}" size="${size}" color="${color}" class="${className || ''}" />`;
} else if (svg) {
  // Render custom SVG
  iconContent = `<div class="${className || ''}" style="width: ${size}; height: ${size}; color: ${color};" set:html={svg}></div>`;
} else {
  iconContent = ''; // No icon specified
}
---

<Fragment set:html={iconContent} />
