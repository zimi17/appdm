---
import Section from '../ui/Section.astro';
import GridContainer from '../ui/GridContainer.astro';
import Grid from '../ui/Grid.astro';
import GridItem from '../ui/GridItem.astro';
import Heading from '../ui/Heading.astro';
import Text from '../ui/Text.astro';

interface Stat {
  value: string;
  label: string;
}

const stats: Stat[] = [
  {
    value: '2000+',
    label: 'Mahasiswa Aktif',
  },
  {
    value: '150+',
    label: 'Dosen & Staf Pengajar',
  },
  {
    value: '90%',
    label: 'Lulusan Terserap Industri',
  },
  {
    value: '2',
    label: 'Program Studi Unggulan',
  },
];
---

<Section backgroundColor="brand-black">
  <GridContainer>
    <div class="text-center mb-12">
      <Heading variant="title" className="text-white mb-4">STIE Dwimulya dalam Angka</Heading>
      <Text variant="body-large" className="text-white">Pencapaian dan kontribusi kami untuk pendidikan Indonesia.</Text>
    </div>
    <Grid>
      {stats.map((stat) => (
        <GridItem span={3} spanMd={6} spanSm={12}>
          <div class="text-center text-white p-6">
            <Heading variant="display" className="text-gold mb-2">{stat.value}</Heading>
            <Text variant="body-large">{stat.label}</Text>
          </div>
        </GridItem>
      ))}
    </Grid>
  </GridContainer>
</Section>

<style>
  .text-gold {
    color: #D4AF37; /* Brand Gold */
  }
</style>
