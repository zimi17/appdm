---
import Section from '../ui/Section.astro';
import GridContainer from '../ui/GridContainer.astro';
import Grid from '../ui/Grid.astro';
import GridItem from '../ui/GridItem.astro';
import Heading from '../ui/Heading.astro';

interface Partner {
  name: string;
  logo: string;
}

const partners: Partner[] = [
  {
    name: 'Partner A',
    logo: '/assets/partner-logo-a.png',
  },
  {
    name: 'Partner B',
    logo: '/assets/partner-logo-b.png',
  },
  {
    name: 'Partner C',
    logo: '/assets/partner-logo-c.png',
  },
  {
    name: 'Partner D',
    logo: '/assets/partner-logo-d.png',
  },
];
---

<Section backgroundColor="white">
  <GridContainer>
    <div class="text-center mb-12">
      <Heading variant="title" className="mb-4">Mitra & Kerjasama</Heading>
      <p class="text-lg text-gray-600">Kami bangga bekerja sama dengan berbagai institusi dan perusahaan terkemuka.</p>
    </div>
    <Grid>
      {partners.map((partner) => (
        <GridItem span={3} spanMd={6} spanSm={12}>
          <div class="flex justify-center items-center p-4 bg-gray-50 rounded-lg h-32">
            <img src={partner.logo} alt={partner.name} class="max-h-full max-w-full object-contain" />
          </div>
        </GridItem>
      ))}
    </Grid>
  </GridContainer>
</Section>
