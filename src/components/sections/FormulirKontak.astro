---
import Section from '../ui/Section.astro';
import GridContainer from '../ui/GridContainer.astro';
import Grid from '../ui/Grid.astro';
import GridItem from '../ui/GridItem.astro';
import Heading from '../ui/Heading.astro';
import Text from '../ui/Text.astro';
import Button from '../ui/Button.astro';
---

<Section backgroundColor="light-grey">
  <GridContainer>
    <div class="text-center mb-12">
      <Heading variant="title" className="mb-4">Hubungi Kami</Heading>
      <Text variant="body-large">Ada pertanyaan? Jangan ragu untuk menghubungi kami.</Text>
    </div>
    <Grid>
      <GridItem span={8} spanSm={12} className="mx-auto">
        <form class="bg-white p-8 rounded-lg shadow-md">
          <div class="mb-4">
            <label for="name" class="block text-brand-black text-sm font-bold mb-2">Nama Lengkap</label>
            <input type="text" id="name" name="name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Nama Lengkap Anda" />
          </div>
          <div class="mb-4">
            <label for="email" class="block text-brand-black text-sm font-bold mb-2">Email</label>
            <input type="email" id="email" name="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="email@example.com" />
          </div>
          <div class="mb-6">
            <label for="message" class="block text-brand-black text-sm font-bold mb-2">Pesan Anda</label>
            <textarea id="message" name="message" rows="5" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Tulis pesan Anda di sini..."></textarea>
          </div>
          <div class="flex items-center justify-center">
            <Button type="submit" variant="primary">Kirim Pesan</Button>
          </div>
        </form>
      </GridItem>
    </Grid>
  </GridContainer>
</Section>
