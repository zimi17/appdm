---
import { newsArticles } from '../../data/news.ts';
import NewsCard from '../common/NewsCard.astro';
---

<section id="news" class="section-padding bg-white">
  <div class="container mx-auto px-spacing-md">
    <div class="mb-spacing-lg flex items-end justify-between">
      <div class="mx-auto max-w-2xl text-center">
        <span class="text-overline text-primary">
          Berita
        </span>
        <h2 class="text-title text-brand-black my-spacing-sm">
          Berita dan Artikel Terbaru
        </h2>
        <p class="text-body text-brand-black">
          Ikuti berita dan informasi terbaru dari STIE Dwimulya.
        </p>
      </div>
    </div>
    <div class="grid grid-cols-1 gap-spacing-md md:grid-cols-2 xl:grid-cols-3">
      {newsArticles.map(article => (
        <NewsCard article={article} />
      ))}
    </div>
  </div>
</section>