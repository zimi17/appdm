---
import Card from '@/components/ui/Card/Card';

export interface Testimonial {
  quote: string;
  author: string;
  title: string;
  imageUrl: string;
}

export interface Props {
  testimonials: Testimonial[];
}

const { testimonials } = Astro.props;
---
<section class="py-20 bg-gray-100">
  <div class="container mx-auto">
    <h2 class="text-4xl font-bold text-center mb-12">Apa Kata Mereka</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {testimonials.map(testimonial => (
        <Card className="p-8">
          <div class="flex items-center mb-4">
            <img src={testimonial.imageUrl} alt={testimonial.author} class="w-16 h-16 rounded-full mr-4" />
            <div>
              <p class="font-bold text-lg">{testimonial.author}</p>
              <p class="text-gray-600">{testimonial.title}</p>
            </div>
          </div>
          <p class="text-lg italic text-gray-700">"{testimonial.quote}"</p>
        </Card>
      ))}
    </div>
  </div>
</section>
