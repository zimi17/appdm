---
import Card from '@/components/ui/Card/Card';
import Button from '@/components/ui/Button/Button';

export interface Program {
  imageUrl: string;
  title: string;
  description: string;
  link: string;
}

export interface Props {
  programs: Program[];
}

const { programs } = Astro.props;
---
<section class="py-20">
  <div class="container mx-auto">
    <h2 class="text-4xl font-bold text-center mb-12">Program Unggulan</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {programs.map(program => (
        <Card>
          <img src={program.imageUrl} alt={program.title} class="w-full h-56 object-cover" />
          <div class="p-6">
            <h3 class="text-2xl font-bold mb-2">{program.title}</h3>
            <p class="text-gray-700 mb-4">{program.description}</p>
            <Button variant="secondary" size="md" onClick={`window.location.href='${program.link}'`} client:load>
              Lihat Detail
            </Button>
          </div>
        </Card>
      ))}
    </div>
  </div>
</section>
