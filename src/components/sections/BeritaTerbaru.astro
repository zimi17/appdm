---
import Section from '../ui/Section.astro';
import GridContainer from '../ui/GridContainer.astro';
import Grid from '../ui/Grid.astro';
import GridItem from '../ui/GridItem.astro';
import Heading from '../ui/Heading.astro';
import Text from '../ui/Text.astro';
import Card from '../ui/Card.astro';
import Button from '../ui/Button.astro';

interface NewsArticle {
  image: string;
  date: string;
  title: string;
  excerpt: string;
  link: string;
}

const newsArticles: NewsArticle[] = [
  {
    image: '/assets/news-1.jpg',
    date: '2025-07-20',
    title: 'STIE Dwimulya Gelar Seminar Nasional Ekonomi Digital',
    excerpt: 'Seminar ini membahas transformasi ekonomi di era digital dan peluang bagi UMKM.',
    link: '/berita/seminar-nasional-ekonomi-digital',
  },
  {
    image: '/assets/news-2.jpg',
    date: '2025-07-15',
    title: 'Mahasiswa STIE Dwimulya Raih Juara Kompetisi Akuntansi Nasional',
    excerpt: 'Prestasi membanggakan diraih tim mahasiswa dalam ajang kompetisi bergengsi.',
    link: '/berita/mahasiswa-juara-kompetisi-akuntansi',
  },
  {
    image: '/assets/news-3.jpg',
    date: '2025-07-10',
    title: 'Kunjungan Industri ke Bursa Efek Indonesia',
    excerpt: 'Mahasiswa program studi Manajemen melakukan kunjungan edukatif ke BEI.',
    link: '/berita/kunjungan-industri-bei',
  },
];
---

<Section backgroundColor="white">
  <GridContainer>
    <div class="text-center mb-12">
      <Heading variant="title" className="mb-4">Berita Terbaru</Heading>
      <Text variant="body-large">Ikuti perkembangan terkini dari kampus STIE Dwimulya.</Text>
    </div>
    <Grid>
      {newsArticles.map((article) => (
        <GridItem span={4} spanMd={6} spanSm={12}>
          <Card shadow={true}>
            <img src={article.image} alt={article.title} class="w-full h-48 object-cover rounded-t-lg mb-4" />
            <Text variant="caption" className="mb-2">{article.date}</Text>
            <Heading variant="subtitle" className="mb-2">{article.title}</Heading>
            <Text variant="body" className="mb-4">{article.excerpt}</Text>
            <Button href={article.link} variant="outline">Baca Selengkapnya</Button>
          </Card>
        </GridItem>
      ))}
    </Grid>
  </GridContainer>
</Section>
