---
import Section from '../ui/Section.astro';
import GridContainer from '../ui/GridContainer.astro';
import Heading from '../ui/Heading.astro';
import Text from '../ui/Text.astro';
import Accordion from '../ui/Accordion.astro';

interface FAQItem {
  question: string;
  answer: string;
}

const faqItems: FAQItem[] = [
  {
    question: 'Bagaimana cara mendaftar di STIE Dwimulya?',
    answer: 'Pendaftaran dapat dilakukan secara online melalui website resmi kami atau datang langsung ke kampus.',
  },
  {
    question: 'Program studi apa saja yang tersedia?',
    answer: 'Kami memiliki program studi Akuntansi dan Manajemen untuk jenjang S1.',
  },
  {
    question: 'Apakah ada beasiswa yang tersedia?',
    answer: 'Ya, kami menyediakan berbagai jenis beasiswa bagi mahasiswa berprestasi dan kurang mampu. Informasi lebih lanjut dapat dilihat di halaman Beasiswa.',
  },
  {
    question: 'Bagaimana prospek karir lulusan STIE Dwimulya?',
    answer: 'Lulusan kami memiliki prospek karir yang luas di berbagai sektor, seperti keuangan, perbankan, akuntansi, dan manajemen. Kami juga memiliki jaringan alumni yang kuat.',
  },
];
---

<Section backgroundColor="white">
  <GridContainer>
    <div class="text-center mb-12">
      <Heading variant="title" className="mb-4">Pertanyaan Umum</Heading>
      <Text variant="body-large">Temukan jawaban atas pertanyaan yang sering diajukan.</Text>
    </div>
    <div class="max-w-3xl mx-auto">
      {faqItems.map((item) => (
        <Accordion title={item.question}>
          <Text variant="body">{item.answer}</Text>
        </Accordion>
      ))}
    </div>
  </GridContainer>
</Section>
