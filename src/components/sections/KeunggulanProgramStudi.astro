---
import Section from '../ui/Section.astro';
import GridContainer from '../ui/GridContainer.astro';
import Grid from '../ui/Grid.astro';
import GridItem from '../ui/GridItem.astro';
import Heading from '../ui/Heading.astro';
import Text from '../ui/Text.astro';
import Icon from '../ui/Icon.astro';

interface Feature {
  iconName: string;
  title: string;
  description: string;
}

const features: Feature[] = [
  {
    iconName: 'BookOpen',
    title: 'Kurikulum Relevan Industri',
    description: 'Dirancang sesuai kebutuhan pasar kerja terkini untuk memastikan lulusan siap bersaing.',
  },
  {
    iconName: 'Users',
    title: 'Dosen Berpengalaman',
    description: 'Pengajar profesional dengan latar belakang akademis dan praktisi yang kuat.',
  },
  {
    iconName: 'Award',
    title: 'Akreditasi Unggul',
    description: 'Jaminan kualitas pendidikan dengan akreditasi institusi dan program studi yang tinggi.',
  },
  {
    iconName: 'Globe',
    title: 'Jaringan Luas',
    description: 'Kesempatan magang dan karir di perusahaan terkemuka melalui kemitraan strategis.',
  },
];
---

<Section backgroundColor="light-grey">
  <GridContainer>
    <div class="text-center mb-12">
      <Heading variant="title" className="mb-4">Mengapa Memilih STIE Dwimulya?</Heading>
      <Text variant="body-large">Keunggulan yang membuat Anda selangkah lebih maju.</Text>
    </div>
    <Grid>
      {features.map((feature) => (
        <GridItem span={3} spanMd={6} spanSm={12}>
          <div class="feature-card text-center p-6 bg-white rounded-lg shadow-md">
            <Icon name={feature.iconName} size="3em" color="#002147" className="mb-4 mx-auto" />
            <Heading variant="subtitle" className="mb-2">{feature.title}</Heading>
            <Text variant="body">{feature.description}</Text>
          </div>
        </GridItem>
      ))}
    </Grid>
  </GridContainer>
</Section>

<style>
  .feature-card {
    height: 100%; /* Ensure cards have equal height */
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
  }
</style>
