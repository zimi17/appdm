---
import Section from '../ui/Section.astro';
import GridContainer from '../ui/GridContainer.astro';
import Grid from '../ui/Grid.astro';
import GridItem from '../ui/GridItem.astro';
import Heading from '../ui/Heading.astro';
import Text from '../ui/Text.astro';
import Card from '../ui/Card.astro';

interface Project {
  image: string;
  title: string;
  description: string;
}

const projects: Project[] = [
  {
    image: '/assets/project-1.jpg',
    title: 'Seminar Nasional Ekonomi Kreatif',
    description: 'Menggali potensi ekonomi kreatif di era digital bersama para ahli industri.',
  },
  {
    image: '/assets/project-2.jpg',
    title: 'Workshop Kewirausahaan Mahasiswa',
    description: 'Membekali mahasiswa dengan keterampilan praktis untuk memulai bisnis.',
  },
  {
    image: '/assets/project-3.jpg',
    title: 'Pengabdian Masyarakat: Edukasi Keuangan',
    description: 'Memberikan literasi keuangan kepada masyarakat desa sekitar kampus.',
  },
  {
    image: '/assets/project-4.jpg',
    title: 'Kompetisi Bisnis Plan Mahasiswa',
    description: 'Ajang inovasi dan pengembangan ide bisnis mahasiswa STIE Dwimulya.',
  },
];
---

<Section backgroundColor="white">
  <GridContainer>
    <div class="text-center mb-12">
      <Heading variant="title" className="mb-4">Inisiatif & Kegiatan Kampus</Heading>
      <Text variant="body-large">Berbagai kegiatan inovatif yang membentuk karakter dan kompetensi mahasiswa.</Text>
    </div>
    <Grid>
      {projects.map((project) => (
        <GridItem span={6} spanMd={12}>
          <Card shadow={true}>
            <img src={project.image} alt={project.title} class="w-full h-48 object-cover rounded-t-lg mb-4" />
            <Heading variant="subtitle" className="mb-2">{project.title}</Heading>
            <Text variant="body">{project.description}</Text>
          </Card>
        </GridItem>
      ))}
    </Grid>
  </GridContainer>
</Section>
